#!/bin/sh

if [ "$1" = "-2" ]; then
	shift
	PLAYER="mpv"
	exec Terminal -i audio-player -n music \
		-t "Internet radio player - pyradio" \
		-- pyradio -u "$PLAYER" "$@"
else
	exec Terminal -i audio-player -n music \
		-t "Mopidy/MPD client - Ncmpcpp" \
		-- ncmpcpp "$@"
fi

# vim: set ft=sh ai ts=4 sw=4 tw=79:
