#!/bin/bash

# Naming instance according to `basename $0`
instance=$(basename $0)
instance=${instance%.*}
instance=${instance,,}

Terminal --working-directory=$(xdg-user-dir DESKTOP) \
	--icon=applications-mail --name=$instance -c neomutt \
	"--title=Client de courrier Ã©lectronique (neomutt)" \
	-- neomutt "$@" &

