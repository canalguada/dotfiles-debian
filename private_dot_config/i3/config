# Resize window (you can also use the mouse for that) {{{
mode "resize" {
	bindsym $left resize shrink width 5 px or 5 ppt
	bindsym $down resize grow height 5 px or 5 ppt
	bindsym $up resize shrink height 5 px or 5 ppt
	bindsym $right resize grow width 5 px or 5 ppt
	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Right resize grow width 5 px or 5 ppt
	# back to normal: Enter or Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
# }}}
# Control floating windows {{{
mode "floating" {
	# Tile floating windows
	bindsym Mod1+KP_Up exec --no-startup-id tile_window top
	bindsym Mod1+KP_Home exec --no-startup-id tile_window top-left
	bindsym Mod1+KP_Prior exec --no-startup-id tile_window top-right
	bindsym Mod1+KP_Down exec --no-startup-id tile_window bottom
	bindsym Mod1+KP_End exec --no-startup-id tile_window bottom-left
	bindsym Mod1+KP_Next exec --no-startup-id tile_window bottom-right
	bindsym Mod1+KP_Left exec --no-startup-id tile_window left
	bindsym Mod1+KP_Right exec --no-startup-id tile_window right
	# Move floating windows
	bindsym Ctrl+KP_Up exec --no-startup-id move_window top
	bindsym Ctrl+KP_Home exec --no-startup-id move_window top-left
	bindsym Ctrl+KP_Prior exec --no-startup-id move_window top-right
	bindsym Ctrl+KP_Down exec --no-startup-id move_window bottom
	bindsym Ctrl+KP_End exec --no-startup-id move_window bottom-left
	bindsym Ctrl+KP_Next exec --no-startup-id move_window bottom-right
	bindsym Ctrl+KP_Left exec --no-startup-id move_window left
	bindsym Ctrl+KP_Right exec --no-startup-id move_window right
	bindsym Ctrl+KP_Begin exec --no-startup-id move_window center
	bindsym Ctrl+KP_Divide exec --no-startup-id move_window left-display
	bindsym Ctrl+KP_Multiply exec --no-startup-id move_window right-display
	bindsym Ctrl+KP_Enter exec --no-startup-id move_window fullscreen
	# back to normal: Enter or Escape or $mod+g
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+g mode "default"
}
bindsym $mod+g mode "floating"
# }}}
# Move the current window to the next output {{{
# (effectively toggles when you only have two outputs)
bindsym $mod+Next move container to output right
bindsym $mod+Prior move container to output left
# }}}
# Jump to urgent window {{{
bindsym $mod+u [urgent=latest] focus
# }}}
# Scratchpad {{{
# Move the currently focused window to the scratchpad
bindsym $mod+Ctrl+twosuperior move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+twosuperior scratchpad show
# }}}
# Shutdown, reboot, lock screen {{{
bindsym Pause exec rofi_powermenu
# }}}
# Swap two containers {{{
mode "swap" {
	bindsym $mod+ampersand workspace $ws1 # switch to workspace
	bindsym $mod+eacute workspace $ws2
	bindsym $mod+quotedbl workspace $ws3
	bindsym $mod+apostrophe workspace $ws4
	bindsym $mod+parenleft workspace $ws5
	bindsym $mod+minus workspace $ws6
	bindsym $mod+egrave workspace $ws7
	bindsym $mod+underscore workspace $ws8
	bindsym $mod+ccedilla workspace $ws9
	bindsym $mod+agrave workspace $ws10
	# change focus
	bindsym $mod+$left focus left
	bindsym $mod+$down focus down
	bindsym $mod+$up focus up
	bindsym $mod+$right focus right
	# alternatively, you can use the cursor keys:
	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right
	## change focus (without mod)
	#bindsym $left focus left
	#bindsym $down focus down
	#bindsym $up focus up
	#bindsym $right focus right
	bindsym Return swap container with mark "swapee"; unmark "swapee"; mode "default";
	bindsym Escape unmark "swapee"; mode "default";
}
bindsym $mod+Shift+i mark --add "swapee"; mode "swap"
#}}}
